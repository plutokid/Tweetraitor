<h1>Listing feedbacks</h1>

<table>
  <tr>
  	<th>Tweeple</th>
    <th>Email</th>
    <th>Content</th>
  </tr>

<% @feedbacks.each do |feedback| 
		@member=Tweeple.where(:id=>feedback.tweeple).first;
		@name = @member[:name];
%>
  <tr>
    <td><%= @name %></td>
    <td><%= feedback.email %></td>
    <td><%= feedback.content %></td>
    <td><%= link_to 'Show', feedback %></td>
    <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
    <td><%= link_to 'Destroy', feedback, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Feedback', new_feedback_path %>
