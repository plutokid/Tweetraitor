<h1>Listing feedbacks</h1>

<table>
  <tr>
  	<th>Name</th>
    <th>Content</th>
  </tr>

<% @feedbacks.each do |feedback| 
		if current_user
			@member=Tweeple.where(:id=>feedback.tweeple).first;
		else
			@member=Guest.where(:id=>feedback.guest).first;
		end
		@name = @member[:name]
%>
  <tr>
  	<td><%= @name %></td>
    <td><%= feedback.content %></td>
  </tr>
<% end %>
</table>

